# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app-name.render.com
NEXT_PUBLIC_THEME_COLOR=#0EA5E9

# =============================================================================
# FIREBASE CONFIGURATION (Client-side)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=

# =============================================================================
# FIREBASE ADMIN SDK (Server-side)
# =============================================================================
# Option 1: Provide full JSON string
FIREBASE_ADMIN_SERVICE_ACCOUNT_JSON=

# Option 2: Provide base64 encoded JSON (useful for Render secrets)
# FIREBASE_ADMIN_SERVICE_ACCOUNT_BASE64=

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://your-app-name.render.com

SESSION_SECRET=
SESSION_COOKIE_NAME=brighted-session
SESSION_MAX_AGE=1800

CSRF_SECRET=
CSRF_COOKIE_NAME=brighted-csrf

RATE_LIMIT_SECRET=
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=20

ENCRYPTION_KEY=
ENCRYPTION_IV=

# =============================================================================
# AUDIT LOGGING
# =============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# SECURITY HEADERS & CSP
# =============================================================================
CSP_NONCE_SECRET=
CSP_ALLOWED_DOMAINS=res.cloudinary.com,firebasestorage.googleapis.com,api.dicebear.com
