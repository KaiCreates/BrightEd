generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Question {
  id              String   @id @default(uuid())
  objectiveId     String
  subjectId       String
  questionText    String
  correctAnswer   Int
  explanation     String
  storyElement    String
  difficulty      Int      @default(1)
  variation       Int      @default(0)
  createdAt       DateTime @default(now())
}
